{
  "name": "brocrobes",
  "version": "0.18.0",
  "description": "Browser plugin for https://transcrob.es",
  "homepage_url": "https://transcrob.es",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "src/extension/background.ts",
    "minimum_chrome_version": "100"
  },
  "icons": {
    "16": "public/tc16.png",
    "32": "public/tc32.png",
    "64": "public/tc64.png",
    "128": "public/tc128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["img/*.*", "*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "src/extension/options.html",
  "action": {
    "default_title": "Transcrobe Me!"
  },
  "manifest_version": 3
}
